{
  "name": "library-management",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node backend/server.js",
    "start:dev": "nodemon backend/server.js",
    "build:frontend": "cd frontend && npm install --no-audit --no-fund && npm run build",
    "install:frontend": "cd frontend && npm install --no-audit --no-fund",
    "test:unit": "jest --config jest.config.js --runInBand",
    "test:api": "newman run tests/postman/collection.json",
    "test:ui": "node tests/selenium/run_selenium_tests.js",
    "test": "npm run test:unit && npm run test:api && npm run test:ui"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "chai": "^6.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mongoose": "^7.4.0",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "chromedriver": "^141.0.2",
    "cross-env": "^7.0.3",
    "jest": "^29.0.0",
    "mocha": "^11.7.4",
    "mongodb-memory-server": "^10.2.3",
    "newman": "^5.0.0",
    "nodemon": "^2.0.22",
    "selenium-webdriver": "^4.36.0",
    "supertest": "^6.3.3"
  }
